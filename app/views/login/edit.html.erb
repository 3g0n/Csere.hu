<div class="left_side">
    <div class="left_side_title">
        <a href="/product" title="Ugrás a kezdőlapra" name="Csere.hu">Csere.hu</a>
    </div>
    <div class="image_holder">
        
    </div>
</div>
<div class="main_frame">
<div class="main_frame_top">
    <span>Felhasználó szerkesztése</span>
</div>
    <div class="reg_container">
        <%= flash[:notice] %>
		<% if @current_user.id == @user.id || @current_user.permission > 1 %>
        <fieldset>
            <%= form_for :user, :url => {:action => "update", :id => @user.id } do |form| %>
            <div>
                <%= form.label :Keresztnév %><br>
                <%= form.text_field :firstname %>
            </div>
            <div>
                <%= form.label :Vezetéknév %><br>
                <%= form.text_field :lastname %>
            </div>
            <div>
                <%= form.label :Email %><br>
                <%= form.text_field :email %>
            </div>
            <div>
                <%= form.label :Jelszó %><br>
                <%= form.password_field :password %>
            </div>
			<% if @current_user.permission > 1 %>
				<div>
	                <%= form.label :Jogosultság %><br>
					<%= form.select :permission, {"Felhasználó" => 1, "Admin" => 2} %>
	            </div>
			<% end %>
            <%= submit_tag "Módosítás" %>
            <% end %>
        </fieldset>
		<% else %>
			<p>Nincs jogosultsága a szerkesztéshez!</p>
		<% end %>
    </div>
</div>