<div class="left_side">
    <div class="left_side_title">
        <a href="/product" title="Ugrás a kezdőlapra" name="Csere.hu">Csere.hu</a>
    </div>
    <div class="image_holder">
        
    </div>
</div>
<div class="main_frame">
	<div class="main_frame_top"><span></span></div>
	<div id="notice" class="clear"><p><%= flash[:notice] %></p></div>
	<div class="main_container">
		<div class="reg_container">
			<h2>Bejelentkezés</h2>
	        <fieldset>
	            <%= form_for :user, :url => {:action => "login"} do |form| %>
	            <div class="fl">
	                <%= form.label :Email %><br />
					<%= form.email_field :l_email, :size => "20" %>
	            </div>
	            <div class="fl">
	                <%= form.label :Jelszó %><br />
					<%= form.password_field :l_password, :size => "20" %>
	            </div>
				<div>
					<span></span><br />
	            	<%= submit_tag "Bejelentkezés", :class => "button" %>
				</div>
	            <% end %>
	        </fieldset>
			<hr />
			<h2>Regisztráció</h2>
	        <fieldset>
	            <%= form_for :user, :url => {:action => "create"} do |form| %>
	            <div>
	                <%= form.label :Keresztnév %><br>
	                <%= form.text_field :firstname %>
	            </div>
	            <div>
	                <%= form.label :Vezetéknév %><br>
	                <%= form.text_field :lastname %>
	            </div>
	            <div>
	                <%= form.label :Email %><br>
	                <%= form.email_field :email %>
	            </div>
	            <div>
	                <%= form.label :Jelszó %><br>
	                <%= form.password_field :password %>
	            </div>
	            <%= submit_tag "Regisztráció", :class => "button" %>
	            <% end %>
	        </fieldset>
	    </div>
	</div>
</div>